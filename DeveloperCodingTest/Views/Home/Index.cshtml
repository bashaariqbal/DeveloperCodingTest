@model IEnumerable<DeveloperCodingTest.ViewModel.PersonVM>
@{
    ViewData["Title"] = "Home Page";
}

<h1>People</h1>

<p>
    <a class="btn btn-info btn-sm" asp-action="Create">Create New</a>
</p>

<table class="table table-striped border">
    <thead>
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.ForeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ForeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SurName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="GetMemberships" asp-route-id="@item.Id">Memberships</a>
                </td>
                <td>
                    <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                </td>
            </tr>
        }
    </tbody>
</table>

